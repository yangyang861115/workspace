package easy;

import java.util.*;

/*
 * 350
 * Given two arrays, write a function to compute their intersection.
 * Example:
 * Given nums1 = [1, 2, 2, 1], nums2 = [2, 2], return [2, 2].
 * Note:
 * Each element in the result should appear as many times as it shows in both arrays.
 * The result can be in any order.
 * */
public class IntersectionOfTwoArraysII {
    public int[] intersect(int[] nums1, int[] nums2) {
        Map<Integer, Integer> map = new HashMap<Integer, Integer>();
        Map<Integer, Integer> map2 = new HashMap<Integer, Integer>();
        Map<Integer, Integer> answer = new HashMap<Integer, Integer>();
        for (int num : nums1) {
            if (map.containsKey(num)) {
                map.put(num, map.get(num) + 1);
            } else {
                map.put(num, 1);
            }
        }

        for (int num : nums2) {
            if (map2.containsKey(num)) {
                map.put(num, map2.get(num) + 1);
            } else {
                map2.put(num, 1);
            }
        }
        for (int key : map.keySet()) {
            if (map2.containsKey(key)) {
                if (map.get(key) <= map2.get(key))
                    answer.put(key, map.get(key));
                else
                    answer.put(key, map2.get(key));
            }
        }
        List<Integer> list = new ArrayList<Integer>();
        for (int key : answer.keySet()) {
            for (int i = 0; i < answer.get(key); i++) {
                list.add(key);
            }
        }
        
        return list.toArray(new int[list.size()]);

    }

    public static void main(String[] args) {
        // TODO Auto-generated method stub

    }

}
